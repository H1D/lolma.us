<h2>Open Source Contributions</h2>

{{#unless isFastBoot}}
  <label>
    {{input type="checkbox" checked=showStalled}}
    Show stalled projects
  </label>
{{/unless}}

{{#with (if showStalled projects (reject-by "status" 4 projects)) as |projects|}}

  {{#with (filter-by 'group' 'sass' projects) as |projects|}}
    <h3>Sass Libraries</h3>
    {{project-group projects=projects locale=locale gitHubProjectsStats=gitHubProjectsStats}}
  {{/with}}

  {{#with (filter-by 'group' 'ember' projects) as |projects|}}
    <h3>Ember Addons</h3>
    {{project-group projects=(filter-by 'type' 'addon' projects) locale=locale gitHubProjectsStats=gitHubProjectsStats}}

    <h3>Ember Apps</h3>
    {{project-group projects=(filter-by 'type' 'app' projects) locale=locale gitHubProjectsStats=gitHubProjectsStats}}
  {{/with}}

  {{#with (filter-by 'group' 'js' projects) as |projects|}}
    <h3>JavaScript Libraries</h3>
    {{project-group projects=projects locale=locale gitHubProjectsStats=gitHubProjectsStats}}
  {{/with}}

  {{#with (filter-by 'group' 'jquery' projects) as |projects|}}
    <h3>Old jQuery Plugins</h3>
    {{project-group projects=projects locale=locale gitHubProjectsStats=gitHubProjectsStats}}
  {{/with}}

{{/with}}