<h2 class = "proJects-title -callout">
  {{t 'projects.title'}}
</h2>

{{input
  type    = "checkbox"
  id      = checkboxId
  class   = 'proJects-stalledInput'
  checked = htmlState.showStalledProjects
}}

<label
  class = "proJects-stalledlabel"
  for   = {{checkboxId}}
>
  {{t 'projects.showStalled'}}
</label>

{{#with (if showStalled projects (reject-by "status" 4 projects)) as |projects|}}

  {{#with (filter-by 'group' 'sass' projects) as |projects|}}
    <h4 class = "proJects-group-title h4">
      {{t 'projects.sassLibs'}}
    </h4>

    {{project-group
      projects            = projects
      locale              = locale
      gitHubProjectsStats = gitHubProjectsStats
      loginAction         = loginAction
      isAuthenticating    = isAuthenticating
      isAuthenticated     = session.isAuthenticated
    }}
  {{/with}}



  {{#with (filter-by 'group' 'ember' projects) as |projects|}}
    <h4 class = "proJects-group-title h4">
      {{t 'projects.emberAddons'}}
    </h4>

    {{project-group
      projects            = (filter-by 'type' 'addon' projects)
      locale              = locale
      gitHubProjectsStats = gitHubProjectsStats
      loginAction         = loginAction
      isAuthenticating    = isAuthenticating
      isAuthenticated     = session.isAuthenticated
    }}


    <h4 class = "proJects-group-title h4">
      {{t 'projects.emberApps'}}
    </h4>

    {{project-group
      projects            = (filter-by 'type' 'app' projects)
      locale              = locale
      gitHubProjectsStats = gitHubProjectsStats
      loginAction         = loginAction
      isAuthenticating    = isAuthenticating
      isAuthenticated     = session.isAuthenticated
    }}
  {{/with}}



  {{#with (filter-by 'group' 'js' projects) as |projects|}}
    <h4 class = "proJects-group-title h4">
      {{t 'projects.jsLibs'}}
    </h4>

    {{project-group
      projects            = projects
      locale              = locale
      gitHubProjectsStats = gitHubProjectsStats
      loginAction         = loginAction
      isAuthenticating    = isAuthenticating
      isAuthenticated     = session.isAuthenticated
    }}
  {{/with}}

  {{#with (filter-by 'group' 'jquery' projects) as |projects|}}
    <h4 class = "proJects-group-title h4">
      {{t 'projects.jQueryPlugins'}}
    </h4>

    {{project-group
      projects            = projects
      locale              = locale
      gitHubProjectsStats = gitHubProjectsStats
      loginAction         = loginAction
      isAuthenticating    = isAuthenticating
      isAuthenticated     = session.isAuthenticated
    }}
  {{/with}}

{{/with}}