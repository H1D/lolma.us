<div class = "route-locale-menu-items">
  {{#if (not (starts-with routing.currentRouteName 'locale.blog.'))}}
    {{link-to
      (t 'menu.blog')
      'locale.blog'
      class  = "route-locale-menu-item _blog"
    }}
  {{/if}}

  {{#if (not-eq routing.currentRouteName 'locale.index')}}
    {{link-to
      (t 'menu.resume')
      'locale.index'
      class  = "route-locale-menu-item _resume"
    }}
  {{/if}}

  <a
    class = "route-locale-menu-item _source -no-icon"
    href="https://github.com/lolmaus/lolma.us"
  >
    {{t 'menu.source'}}
    <span class = "externalLink"></span>
  </a>

  {{#link-to
    class  = "route-locale-menu-item _locale"
    params = routing.router.oppositeLocaleURLParams
  }}
    {{t 'langSwitcher'}}
  {{/link-to}}
</div>{{! route-locale-menu-items }}