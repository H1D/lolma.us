<div class = "route-blog">


  {{#sec-tion}}
    <div class = "route-blog-sidebar">
      <div class = "route-blog-sidebar-section _avatar">
        <img
          class  = "route-blog-sidebar-avatar"
          src    = "/favicon.jpg"
          alt    = {{t 'header.title'}}
          width  = "512"
          height = "512"
        >
      </div>{{! sidebar-section _avatar }}

      <div class = "route-blog-sidebar-section _content">
        <h2 class = "route-blog-title">
          {{t 'header.title'}}
          @lolmaus
        </h2>

        <div class = "route-blog-subtitle">
          {{t 'header.subtitle'}}
        </div>

        {{horizontal-menu class = "route-blogIndex-menu"}}
      </div>{{! sidebar-section _content }}
      
      <div class = "route-blog-sidebar-section _bottom">

        <a
          class="route-blog-sidebar-section-bottom-link -no-icon"
          href="https://creativecommons.org/licenses/by/4.0/"
        >
          {{svg-jar "cc-by"
            class = "route-blog-sidebar-section-bottom-icon _cc"
            alt   = (concat (t 'blog.license') ' Creative Commons 4.0 Attribution')
            title = (concat (t 'blog.license') ' Creative Commons 4.0 Attribution')
          }}
        </a>{{! route-blog-sidebar-section-bottom-link}}

        <a
          class="route-blog-sidebar-section-bottom-link -no-icon"
          href="https://lolma.us/rss_{{model.locale}}.xml"
        >
          {{svg-jar "rss"
            class = "route-blog-sidebar-section-bottom-icon _rss"
            alt   = 'RSS'
            title = 'RSS'
          }}
        </a>{{! route-blog-sidebar-section-bottom-link}}
      </div>{{! route-blog-sidebar-section _bottom }}
      
    </div>{{! route-blog-sidebar }}
  {{/sec-tion}}


  {{#sec-tion
    class      = "route-blog-content"
    innerClass = "route-blog-content-inner"
  }}
    {{outlet}}
  {{/sec-tion}}{{! route-blog-content }}


</div>{{! route-blog }}
